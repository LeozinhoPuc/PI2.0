CREATE SEQUENCE Mapa_Assentos_SEQ START WITH 1 INCREMENT BY 1 NOCACHE;
CREATE OR REPLACE TRIGGER Inserir_Assentos
AFTER INSERT ON Voos
FOR EACH ROW
DECLARE
    ASSENTO CHAR(4);
BEGIN
    FOR i IN 1..40 LOOP
        IF i <= 40 THEN
            ASSENTO := CHR(64 + (i-1) / 4) || CHR(48 + (i-1) MOD 4 + 1);
        END IF;
        INSERT INTO Mapa_Assentos(ID, ASSENTO_NUMERO, VOO_ID) VALUES(Mapa_Assentos_SEQ.NEXTVAL, ASSENTO, :NEW.ID_VOO);
    END LOOP;
END;
