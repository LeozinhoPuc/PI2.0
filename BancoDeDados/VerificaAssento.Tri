CREATE TRIGGER VerificaAssento 
BEFORE INSERT OR UPDATE ON Mapa_Assentos 
FOR EACH ROW 
BEGIN 
 IF :NEW.STATUS = 'RESERVADO' OR :NEW.STATUS = 'VENDIDO' THEN 
    UPDATE Mapa_Assentos SET STATUS = 'LIBERADO' WHERE ID = :NEW.ID; 
 END IF; 
EXCEPTION 
 WHEN NO_DATA_FOUND THEN 
    RAISE_APPLICATION_ERROR(-20001, 'Assento n√£o encontrado'); 
END; 
